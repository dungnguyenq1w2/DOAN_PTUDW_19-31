<div class="body">
  <div class="signIn">
    <div class="signIn__left">
      <img src="/img/signin.jpg" alt="sign in picture" />
    </div>
    <div class="signIn__right">
      <h3>ACCOUNT LOGIN</h3>
      <form>
        <div class="signIn__right__input">
          <div class="signIn__right__input__username">
            <input type="text" placeholder="Username" />
          </div>
          <div class="signIn__right__input__password">
            <input type="password" placeholder="Password" />
          </div>
        </div>
        <button>SIGN IN</button>
        <a href="#">Forgot User name / Password</a>
        <a href="signUp">------ SIGN UP</a>
      </form>
    </div>
  </div>
</div>
