<section class="hero">
  <div id="carouselHeros" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselHeros" data-slide-to="0" class="active"></li>
      <li data-target="#carouselHeros" data-slide-to="1"></li>
      <li data-target="#carouselHeros" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="/img/hero-1.jpg"
          class="d-block w-100"
          alt="hero-1"
          style="
            height: 700px;
            object-fit: cover;
            background-color: white;
            position: relative;
          "
        />
        <div class="hero__box">
          <h1 class="title">Making your life sweeter one bite at a time!</h1>
          <a href="/shop">OUR CAKES</a>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="/img/hero-2.jpg"
          class="d-block w-100"
          alt="hero-2"
          style="height: 700px; object-fit: cover; background-color: white"
        />
        <div class="hero__box">
          <h1 class="title">Making your life sweeter one bite at a time!</h1>
          <a href="#">OUR CAKES</a>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="/img/hero-3.jpg"
          class="d-block w-100"
          alt="hero-3"
          style="height: 700px; object-fit: cover; background-color: white"
        />
        <div class="hero__box">
          <h1 class="title">Making your life sweeter one bite at a time!</h1>
          <a href="#">OUR CAKES</a>
        </div>
      </div>
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselHeros"
      role="button"
      data-slide="prev"
    >
      <div
        style="
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: black;
          padding: 12px;
          border-radius: 100%;
        "
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </div>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselHeros"
      role="button"
      data-slide="next"
    >
      <div
        style="
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: black;
          padding: 12px;
          border-radius: 100%;
        "
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </div>

      <span class="sr-only">Next</span>
    </a>
  </div>
</section>

<section class="about">
  <div class="about__text">
    <h3 class="section__title">About cake shop</h3>
    <h1 class="title__thin">Cakes and bakes from the house of Queens!</h1>
    <p>
      The "Cake Shop" is a Jordanian Brand that started as a small family
      business. The owners are Dr. Iyad Sultan and Dr. Sereen Sharabati,
      supported by a staff of 80 employees.
    </p>
  </div>
  <div class="about__img">
    <img src="/img/product-big-3.jpg" alt="about-img" />
  </div>
</section>

<section class="categories">
  <% categories.forEach(category => { %>
  <div class="category">
    <img
      src="<%= category.figure %>"
      alt="<%= category.name %>"
      onclick="location.href='/shop?category=<%= category.name %>'"
    />
    <h4 class="category__name"><%= category.name %></h4>
  </div>
  <% }); %>
</section>

<section class="products">
  <% cakes.forEach((cake) => { %>
  <div class="product">
    <span id="product__id" style="display: none"><%= cake._id%></span>
    <a href="/cakes/<%= cake._id %>">
      <div class="product__img">
        <img
          src="<%= cake.figure %>"
          alt="product"
          style="width: 250px; height: 250px"
        />
        <span class="product__category"><%= cake.category.name %></span>
      </div>
      <div class="product__info">
        <h5 id="product__name"><%= cake.name %></h5>
        <h5
          style="
            font-size: large;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman',
              serif;
          "
        >
          $ <span id="product__price"><%= cake.price %></span>
        </h5>
      </div>
    </a>
    <div class="product__cart">
      <button class="product__cart__btn">ADD TO CART</button>
    </div>
  </div>
  <% }); %>
</section>

<section class="instagram">
  <div class="instagram__text">
    <h3 class="section__title">Follow us on instagram</h3>
    <h2 class="title__thin">Sweet moments are saved as memories.</h2>
    <div class="instagram__text__img">
      <img src="/img/cake-piece.png" alt="cake-piece" />
    </div>
  </div>
  <div class="instagram__img">
    <img src="/img/instagram-1.jpg" alt="instagram-1" />
    <img src="/img/instagram-2.jpg" alt="instagram-2" />
    <img src="/img/instagram-3.jpg" alt="instagram-3" />
    <img src="/img/instagram-4.jpg" alt="instagram-4" />
    <img src="/img/instagram-5.jpg" alt="instagram-5" />
    <img src="/img/instagram-2.jpg" alt="instagram-6" />
  </div>
</section>
