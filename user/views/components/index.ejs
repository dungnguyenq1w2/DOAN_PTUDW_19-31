<section class="hero">
  <div id="carouselHeros" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselHeros" data-slide-to="0" class="active"></li>
      <li data-target="#carouselHeros" data-slide-to="1"></li>
      <li data-target="#carouselHeros" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="/img/hero-1.jpg"
          class="d-block w-100"
          alt="hero-1"
          style="
            height: 700px;
            object-fit: cover;
            background-color: white;
            position: relative;
            "
        />
        <div class="hero__box">
          <h1 class="title">
            Making your life sweeter one bite at a time!
          </h1>
          <a href="#">OUR CAKES</a>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="/img/hero-2.jpg"
          class="d-block w-100"
          alt="hero-2"
          style="height: 700px; object-fit: cover; background-color: white"
        />
        <div class="hero__box">
          <h1 class="title">
            Making your life sweeter one bite at a time!
          </h1>
          <a href="#">OUR CAKES</a>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="/img/hero-3.jpg"
          class="d-block w-100"
          alt="hero-3"
          style="height: 700px; object-fit: cover; background-color: white"
        />
        <div class="hero__box">
          <h1 class="title">
            Making your life sweeter one bite at a time!
          </h1>
          <a href="#">OUR CAKES</a>
        </div>
      </div>
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselHeros"
      role="button"
      data-slide="prev"
    >
      <div
        style="
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: black;
          padding: 12px;
          border-radius: 100%;
        "
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </div>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselHeros"
      role="button"
      data-slide="next"
    >
      <div
        style="
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: black;
          padding: 12px;
          border-radius: 100%;
        "
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </div>

      <span class="sr-only">Next</span>
    </a>
  </div>
</section>

<section class="about">
  <div class="about__text">
    <h3 class="section__title">About cake shop</h3>
    <h1 class="title__thin">Cakes and bakes from the house of Queens!</h1>
    <p>
      The "Cake Shop" is a Jordanian Brand that started as a small family
      business. The owners are Dr. Iyad Sultan and Dr. Sereen Sharabati,
      supported by a staff of 80 employees.
    </p>
  </div>
  <div class="about__img">
    <img src="/img/product-big-3.jpg" alt="about-img" />
  </div>
</section>

<section class="categories">
  <div class="category">
    <img src="/img/buttercake.jpg" alt="Butter" />
    <h4 class="category__name">Butter</h4>
  </div>
  <div class="category">
    <img src="/img/donut.jpg" alt="Donut" />
    <h4 class="category__name">Donut</h4>
  </div>
  <div class="category">
    <img src="/img/cupcake.jpg" alt="Cupcake" />
    <h4 class="category__name">Cupcake</h4>
  </div>
  <div class="category">
    <img src="/img/redvelvetcake.jpg" alt="Red Velvet" />
    <h4 class="category__name">Red Velvet</h4>
  </div>
  <div class="category">
    <img src="/img/biscuit.jpg" alt="Biscuit" />
    <h4 class="category__name">Biscuit</h4>
  </div>
</section>

<section class="products">
  <% cakes.forEach((cake) => { %>
    <div class="product">
      <div class="product__img">
        <a href="/cakes/<%= cake._id %>"><img src="<%= cake.figure %>" alt="<%= cake.name %>" /></a>
        <span class="product__category"><%= cake.category %></span>
      </div>
      <div class="product__info">
        <h5><%= cake.name %></h5>
        <h5><%= cake.price %></h5>
      </div>
      <div class="product__cart">
        <button class="product__cart__btn">ADD TO CART</button>
      </div>
    </div>
  <% }); %>
</section>

