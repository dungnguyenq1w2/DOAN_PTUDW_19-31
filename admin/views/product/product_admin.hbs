<main>
  <section class="main__top">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-auto">
          <div class="title__thin">
            <h1><b>Product detail</b></h1>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="main__product">
    <div class="container">
      <div class="row">
        <div class="col-6">
          <div class="product-big">
            <img src="/images/product-2.jpg" alt="Product Big Image" />
          </div>
          <div class="input-group input-img">
            <input
              type="file"
              class="form-control"
              id="inputGroupFile04"
              aria-describedby="inputGroupFileAddon04"
              aria-label="Upload"
            />
            <button
              class="btn btn-secondary"
              type="button"
              id="inputGroupFileAddon04"
            >Upload</button>
          </div>
          <div class="mb-3" style="margin-top:20px">
            <label for="introduction" class="form-label">Introduction:</label>
            <textarea
              class="form-control"
              id="introduction"
              style="height:150px"
            >Lorem ipsum dolor sit amet consectetur adipisicing elit. Sint perspiciatis laudantium corporis.</textarea>
          </div>
        </div>
        <div class="col-6">
          <div class="product-detail">
            <div class="mb-3">
              <label for="name" class="form-label">Name:</label>
              <input
                type="text"
                class="form-control"
                id="name"
                value="Sweet autumn leaves"
              />
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Price:</label>
              <input
                type="number"
                class="form-control"
                id="price"
                value="26.41"
              />
            </div>
            <div class="mb-3">
              <label for="sku" class="form-label">SKU:</label>
              <input type="number" class="form-control" id="sku" value="17" />
            </div>
            <div class="mb-3">
              <label for="category" class="form-label">Category:</label>
              <select
                class="form-select"
                id="category"
                aria-label="Default select example"
              >
                <option selected>Cupcake</option>
                <option value="1">Butter</option>
                <option value="2">Donut</option>
                <option value="3">Cupcake</option>
                <option value="4">Red Velvet</option>
                <option value="5">Biscuit</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="tags" class="form-label">Tags:</label>
              <div id="tags">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="tag1"
                  checked
                />
                <label for="tag1" class="form-check-label">Gadget</label><br />
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="tag2"
                  checked
                />
                <label
                  for="tag2"
                  class="form-check-label"
                >Minimalistic</label><br />
                <input type="checkbox" class="form-check-input" id="tag3" />
                <label for="tag3" class="form-check-label">Sweet</label><br />
                <input type="checkbox" class="form-check-input" id="tag4" />
                <label for="tag4" class="form-check-label">Delicious</label>
              </div>
            </div>
            <div class="mb-3" style="margin-top: 10px;">
              <label for="description" class="form-label">Description:</label>
              <textarea
                class="form-control"
                id="description"
                style="height:150px"
              >This delectable Strawberry Pie is an extraordinary treat filled with sweet and tasty chunks of delicious strawberries. Made with the freshest ingredients, one bite will send you to summertime. Each gift arrives in an elegant gift box and arrives with a greeting card of your choice that you can personalize online!</textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="save-product">
            <button
              type="button"
              class="btn btn-secondary"
              onclick="location.href='#'"
            >
              <img
                src="/images/save-icon.png"
                alt="Save icon"
                style="width:30px;height:30px"
              />
              <span>&nbsp;Save product</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>